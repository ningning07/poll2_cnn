<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.apps.poll.dao.extend.OptionsVMMapper">
  <select id="selectAll" resultMap="OptionsVMResultMap">
  select*from poll_clazz
  </select>
  <resultMap type="com.briup.apps.poll.bean.extend.OptionsVM" 
  id="OptionsVMResulMap">
  <id column="id" property="id"/>
  <result column="name" property="name"/>
  <result column="score" property="score"/>
  <association  
  column="question_id" 
  select="com.briup.apps.dao.QuestionMapper.selectByPrimaryKey"
  property="question"> 
  </association>
  </resultMap>
</mapper>
